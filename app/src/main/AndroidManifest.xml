<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.situm.wayfinding.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="es.situm.maps.API_USER"
            android:value="@string/situm_credentials_api_user" />
        <meta-data
            android:name="es.situm.maps.API_KEY"
            android:value="@string/situm_credentials_api_key" />

        <activity
            android:name=".list.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".samples.ActivitySampleSimpleMap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleDelegateBackEvents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleLogEvents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleUsingLibrary"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleNoSearchView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleDashboardTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".samples.ActivitySampleCustomizeRequests"
            android:screenOrientation="portrait" />
    </application>

</manifest>